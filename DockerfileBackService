# Use an official Python runtime as a parent image
FROM python:3.10

RUN apt-get update && \
    apt-get install -y gcc libpq-dev && \
    apt clean && \
    rm -rf /var/cache/apt/*

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONIOENCODING=utf-8

COPY back/requirements.txt/ /tmp/requirements.txt

RUN pip install -U pip && \
    pip install --no-cache-dir -r /tmp/requirements.txt

# Copy the news_collection_service folder into the container at /app
COPY ./shared /app/shared
# COPY ./pycfhelpers /app/pycfhelpers
#COPY ./back /app/back
COPY ./config.py    /app/config.py
COPY ./logger.py /app/logger.py
COPY ./Fakes /app/Fakes

EXPOSE 80

# Define environment variable
ENV PYTHONPATH "${PYTHONPATH}:/app"

WORKDIR /app

#RUN chmod a+x back/scripts/*
#CMD back/scripts/start_service.sh
CMD ["uvicorn", "back.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]